# My aliases

# COMPUTADOR
  alias up='sudo pacman -Syu'
  alias up2='sudo pacman -Syy'
  alias del='sudo pacman -Scc'
  alias dep='sudo pacman -Rs $(sudo pacman -Qtdq)'
  alias help='cat ~/.aliases'
  alias i3='nvim .config/i3/config'
  alias poly='nvim .config/polybar/config'
  
# GITHUB
  alias repo='cd ~/.joao-repo/dotfiles/'
  alias gith='git add . && git commit -m "update" && git push -f'
  alias name='git config --global user.name JoaoPedroPierri'
  alias email='git config --global user.email joaopedropierri2002@gmail.com'

# CELULAR
  alias reb='adb reboot'
  alias bootloader='adb reboot bootloader'
  alias fast='fastboot reboot'
  alias vb='fastboot --disable-verity --disable-verification flash vbmeta vbmeta-citrus.img'
  alias twrp='fastboot flash recovery twrp_citrus-3.5-1.img'
  alias erase='fastboot erase userdata && fastboot -w'
 
# EXTRAS
  alias all='lsd -A'
